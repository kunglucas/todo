<!doctype html>
<html lang="en">
    <head>
        <!-- 
            Author: Lucas Larsson.
            Project: Backend 1 final exam.
         -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Bootstrap version 5. -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <title>Todo application - Lucas Larsson</title>
        <!-- Ckeditor. -->
        <script src="//cdn.ckeditor.com/4.13.0/full/ckeditor.js"></script>
        <style>
            .feed
            {
                max-height:90vh;
                margin-bottom:2rem;
                overflow:auto;
                background-color:aliceblue;
                border-radius:8px;
                border:1px solid #dee2e6;
            }

            .feed-wrapper
            {
                padding:2rem;
            }
            .card
            {
                margin-top:2rem;
                border:1px solid #dee2e6;
                color:#6c757d;
            }

            .card-body
            {
                padding:8px;
            }

            .card-footer
            {
                background-color:white;
                border-top:1px solid #dee2e6;
                margin-left:1rem;
                margin-right:1rem;
                text-align:center;
                margin-top:2rem;
            }
            .card-header
            {
                margin-bottom:2rem;
                text-align:center;
                background-color:white;
                border-bottom:1px solid #dee2e6;
                margin-right:1rem;
                margin-left:1rem;
            }
            .todo
            {
                padding:8px;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1 class="text-center mt-3 mb-3"><%= title %></h1>
            <!-- Render actions through a switch statement. -->
            <% 
            switch (action) {
                case "add":
                  %>
                  <%- include('includes/add.ejs') %>
                  <%
                  break;
                case "finish":
                %>
                <%- include('includes/finish.ejs') %>
                <%
                break;
                case "open":
                %>
                <%- include('includes/open.ejs') %>
                <%
                break;
                case "LoggedIn":
                 %>
                 <%- include('includes/LoggedIn.ejs') %>
                 <%
                  break;
                  case "requestAlreadySent":
                  %>
                  <%- include('includes/requestAlreadySent.ejs') %>
                  <%
                  break;
                  case "request":
                  %>
                  <%- include('includes/request.ejs') %>
                  <%
                  break;
                  case "requestSent":
                  %>
                  <%- include('includes/requestSent.ejs') %>
                  <%
                  break;
                  case "alreadyFriends":
                  %>
                  <%- include('includes/alreadyFriends.ejs') %>
                  <%
                  break;
                  case "userDoesNotExist":
                  %>
                  <%- include('includes/userDoesNotExist.ejs') %>
                  <%
                  break;
                case "timeline":
                  %>
                  <%- include('includes/timeline.ejs') %>               
                  <%
                  break;
                default:
                  %>
                  <%- include('includes/default.ejs') %> 
                <%
              }
            %>
            <!-- User logon error. -->   
            <% if(action == 'Error') { %>
                <%- include('includes/Error.ejs') %> 
            <% } %>
            <!-- User already registered message. -->
            <% if(action == 'User') { %>
                <%- include('includes/User.ejs') %> 
            <% } %>
        </div> 
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>
